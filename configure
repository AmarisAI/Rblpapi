uname=$(type -P uname)
if [ "${uname}" = "" ]; then
    echo "You do not have uname so this is unlikely to be a Unix system. Exiting."
    exit -1
fi

sysname=$(Rscript -e 'cat(Sys.info()["sysname"])')

if [ ${sysname} == "Linux" ]; then
    rpath=$(Rscript -e 'cat(file.path(.libPaths()[1], "Rblpapi", "blp"))')

    arch=$(uname -m)
    if [ "${arch}" = "x86_64" ]; then
        echo "Setting up compilation for 64-bit system"
        sed -e"s/@config@/blpapi3_64/" -e"s|@rpath@|"${rpath}"|" src/Makevars.in > src/Makevars
        flavour="64"
    elif [ "${arch}" = "i686" ]; then
        echo "Setting up compilation for 32-bit system"
        sed -e"s/@config@/blpapi3_32/" -e"s|@rpath@|"${rpath}"|" src/Makevars.in > src/Makevars
        flavour="32"
    else 
        echo "Unknown architecture: ${arch}. Exiting."
        exit -1
    fi

    ## download corresponding tarball and unpack shared library from tarball
    mkdir -p inst/blp inst/include
    cd inst/blp/
    wget https://github.com/Rblp/blp/raw/master/linux${flavour}/blpLibrary.tar.gz
    tar xfz blpLibrary.tar.gz libblpapi3_${flavour}.so
    rm blpLibrary.tar.gz
    
    cd ../../inst
    wget https://github.com/Rblp/blp/raw/master/headers/linux/blpHeaders.tar.gz
    tar xfz blpHeaders.tar.gz
    rm blpHeaders.tar.gz
    
else
    echo "OS X is not yet supported. Contributions are welcome."
    exit -1
fi

exit 0
