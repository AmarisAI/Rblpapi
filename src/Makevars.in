## -*- mode: makefile; -*-

## use C++11
CXX_STD      = CXX11

## filled in by configure
BBG_LIB     = @config@
BBG_RPATH   = @rpath@
BLP_PATH    = @blppath@
HEADER_PATH = @headpath@

## set include and linker options
## Bbg API files are assummed to be in the standard search path
PKG_CPPFLAGS = -I..$(HEADER_PATH) -I.
#PKG_LIBS     = -l$(BBG_LIB) -L../inst/blp/ -Wl,-rpath,$(BBG_RPATH)
PKG_LIBS     = -l$(BBG_LIB) -L..$(BLP_PATH) -Wl,-rpath,$(BBG_RPATH)


